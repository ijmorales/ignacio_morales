<div class="container mx-auto px-4 py-6" data-controller="kanban-board" id="<%= kanban_board.id %>">
  <h1 class="text-2xl font-semibold mb-6"><%= kanban_board.model_name.human %></h1>

  <div class="w-full h-full flex gap-4">
    <% kanban_board.cards_by_status.each do |status, cards| %>
      <div class="p-5 bg-gray-200 border-2 border-solid border-gray-300 rounded-lg w-1/3 flex-grow-0 overflow-y-auto h-[70vh]" id="<%= status %>" name="status-container" data-action="drop->kanban-board#drop dragover->kanban-board#dragOver">
        <h2 class="text-xl font-semibold mb-4"><%= status %></h2>
        <ul class="list-none grid grid-cols-1 gap-2" id="<%= status %>_list">
          <% cards.each do |card| %>
            <li><%= render 'experiments/kanban_boards/cards/card', card: card %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
